<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <script src="/js/pages/favorites-page.js" defer></script>
</head>
<body>
    <%- include('../partials/header') %>

    <main class="favorites-page">
        <div id="fav-view-list">
            <section class="favorites-search" aria-labelledby="favorites-title">
                <h1 id="favorites-title" data-i18n="favorites.title">
                    Favorites
                </h1>
                <%- include('../partials/search-bar') %>
            </section>

            <section class="favorites-results" aria-label="Favorite recipes">
                <div class="favorites-grid js-favorites-grid">
                    <%- include('../partials/recipe-card') %>
                </div>

                <div class="favorites-pagination js-favorites-pagination">
                    </div>
            </section>

            <section class="favorites-empty visually-hidden" aria-label="No favorite recipes yet">
            	<p data-i18n="favorites.emptyText">
                	You donâ€™t have any saved recipes yet. Generate one or choose from the catalog.
            	</p>
        	</section>

        	<section class="favorites-no-match visually-hidden" aria-label="No matching recipes">
            	<p>
                	Nothing matches your filters.
            </p>
        </section>
    </main>
        </div>

        <div id="fav-view-detail" hidden>
            <section class="recipe-hero">
                <div class="recipe-hero__image">
                    <img class="js-detail-img" src="" alt="Recipe">
                </div>

                <div class="recipe-hero__info">
                    <h1 class="js-detail-title">Recipe Title</h1>

                    <div class="recipe-hero__meta">
                        <span class="recipe-meta__time js-detail-time">0 min</span>
                        <span class="recipe-meta__calories js-detail-calories">0 kcal</span>
                    </div>

                    <button type="button" class="recipe-favorite-button js-fav-btn">
                        Remove from Favorites
                    </button>
                </div>
            </section>

            <section class="recipe-content">
                <article class="recipe-ingredients">
                    <h2 data-i18n="recipe.ingredientsTitle">Ingredients</h2>
                    <ul class="js-detail-ingredients"></ul>
                </article>

                <article class="recipe-instructions">
                    <h2 data-i18n="recipe.instructionsTitle">Instructions</h2>
                    <ol class="js-detail-instructions"></ol>
                </article>
            </section>

            <section class="recipe-back">
                <a href="#/favorites" class="recipe-back__link">
                    Back to Favorites
                </a>
            </section>
        </div>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>